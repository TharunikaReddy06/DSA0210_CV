import cv2
import numpy as np
import matplotlib.pyplot as plt

# Read grayscale image
img = cv2.imread('lab2.png', 0)

# Structuring element
kernel = np.ones((9, 9), np.uint8)

# Black Hat operation
blackhat = cv2.morphologyEx(img, cv2.MORPH_BLACKHAT, kernel)

# Display result
plt.imshow(blackhat, cmap='gray')
plt.axis('off')

