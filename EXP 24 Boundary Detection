import cv2
import numpy as np
import matplotlib.pyplot as plt

# Read grayscale image
img = cv2.imread('lab2.png', 0)

# Boundary detection kernel
kernel = np.array([
    [-1, -1, -1],
    [-1,  8, -1],
    [-1, -1, -1]
])

# Apply convolution
boundary = cv2.filter2D(img, -1, kernel)

# Display output
plt.imshow(boundary, cmap='gray')
plt.axis('off')

